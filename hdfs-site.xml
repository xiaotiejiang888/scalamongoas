<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>dfs.nameservices</name>
    <value>wifianalytics</value> <!--命名空间的逻辑名称-->
  </property>
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/data/hadoop-2.7.2/name</value>   <!--DFS name node 存放 name table 的目录-->
  </property>
  <property>
    <name>dfs.ha.namenodes.wifianalytics</name>
    <value>nn1,nn2</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.wifianalytics.nn1</name>
    <value>dev.namenode01.td.com:8020</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.wifianalytics.nn1</name>
    <value>dev.namenode01.td.com:50070</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.wifianalytics.nn2</name>
    <value>dev.namenode02.td.com:8020</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.wifianalytics.nn2</name>
    <value>dev.namenode02.td.com:50070</value>
  </property>
   <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value>qjournal://dev.datanode01.td.com:8485;dev.datanode02.td.com:8485;dev.datanode03.td.com:8485/wifianalytics-journal</value>
  </property>
  <property>
    <name>dfs.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>dfs.journalnode.edits.dir</name>
    <value>/data/hadoop-2.7.2/journal</value>
  </property>
  <property>
    <name>dfs.client.failover.proxy.provider.wifianalytics</name>
    <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
  </property>
  <property>
    <name>dfs.ha.fencing.methods</name>
    <value>sshfence</value>
  </property>
  <property>
    <name>dfs.ha.fencing.ssh.private-key-files</name>
    <value>/home/hadoop/.ssh/id_rsa</value>
  </property>
  <property>
    <name>dfs.ha.fencing.ssh.connect-timeout</name>
    <value>50000</value>
  </property>
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/data/hadoop-2.7.2/data</value>
  </property>
  <property>
    <name>dfs.replication</name>
    <value>3</value>
  </property>
  <property>
    <name>dfs.blocksize</name>
    <value>65m</value>
  </property>
</configuration>
