<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://wifianalytics/zmy</value> <!--hdfs://cluster1(域名)，这里的值指的是默认的HDFS路径-->
  </property>
  <property>
    <name>ha.zookeeper.quorum</name>
    <value>dev.zk01.td.com:2181,dev.zk02.td.com:2181,dev.zk03.td.com:2181</value>  <!--ZooKeeper集群的地址和端口。注意，数量一定是奇数，且不少于三个节点-->
  </property>
  <property>
    <name>fs.trash.interval</name>
    <value>1440</value> <!--被用户删除的文件的保存时间 单位分钟-->
  </property>
</configuration>
